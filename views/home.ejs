    <div class="blog" name="blog">
        <h1>BLOGS</h1>
        <div class="row">
            <% postsRender.forEach((postRender)=>{ %>

                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-head">
                            <img src="<%= postRender.img %>" alt="">

                        </div>
                        <div class="card-body">
                            <h2>
                                <%= postRender.title %>
                            </h2>
                            <p>
                                <%= postRender.body %>
                            </p>
                            <a href="/post/<%=postRender.title%>">Read more.</a>
                        </div>
                    </div>
                </div>

                <% }) %>
        </div>
